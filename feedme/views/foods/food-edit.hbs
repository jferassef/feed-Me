<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>Create Item</h1>

      <hr>

      <form action="/foods/{{_id}}/edit" method="POST">

        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name"
            value="{{name}}">
        </div>

        <div>
          <select name="category" id="category" value="{{category}}" multiple>
            <option value="Meat">Meat</option>
            <option value="Vegetable">Vegetable</option>
            <option value="Fruit">Fruit</option>
            <option value="Sweets">Sweets</option>
            <option value="Drinks">Drinks</option>
            <option value="Other">Other</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="imageUrl" class="form-label">Image Link</label>
          <input type="text" class="form-control" id="imageUrl" name="imageUrl"
            value="{{imageUrl}}">
        </div>
        <div class="mb-3">
          <label for="expireDate" class="form-label">Expiration date</label>
          <input type="date" class="form-control" id="expireDate"
            name="expireDate" value="{{expireDate}}">
        </div>
        <div class="mb-3">
          <label for="quantity" class="form-label">Amount</label>
          <input type="number" class="form-control" id="quantity"
            name="quantity" value="{{quantity}}">
        </div>
        <div class="mb-3">
          <label for="note" class="form-label">Add some comment</label>
          <input type="text" class="form-control" id="note" name="note"
            value="{{note}}">
        </div>


        <button type="submit" class="btn btn-dark">Update Item</button>
        <a href="/food-list" class="btn btn-dark">Go back</a>
      </form>
      <hr>
    </div>
  </div>
</div>