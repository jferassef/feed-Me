
   <h2>Available Food</h2>
<div>
    {{#each foods}}
    <a href="/foods/{{this._id}}">{{this.name}}</a>
    <p>Category: {{this.category}}</p>
    <a href="/foods/{{this._id}}/edit" class="btn btn-primary">Edit</a>
    <form action="/foods/{{this._id}}/delete" method="post">
      <button class="btn btn-danger" type="submit">Delete Item</button>
    </form>
    {{/each}}

    <div class="message">Running out of food, go to the store</div>

    <h5>TOTAL:</h5><span class="total">{{total}}</span> 
    <h5>TOTAL ITEMS:</h5><span class="items-amount">{{totalItems}}</span>
  
</div>

<div></div>
<a href="/foods/food-create" class="btn btn-dark">Create Food</a>