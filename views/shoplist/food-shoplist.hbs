<h1>Create Shopping List</h1>
<form action="/shoplist/food-shoplist" method="POST">
  <div class="mb-3">
          <label for="name" class="form-label">Item Name</label>
          <input type="text" class="form-control" id="name" name="name">
        </div>
         <div class="hidden">
          <label for="category">Choose a category:</label>
          <select name="category" id="category" multiple>
            <option value="Meat">Meat</option>
            <option value="Vegetable">Vegetable</option>
            <option value="Fruit">Fruit</option>
            <option value="Sweets">Sweets</option>
            <option value="Drinks">Drinks</option>
            <option value="Other">Other</option>
          </select>
        </div>

        <div class="hidden" class="mb-3">
          <label for="imageUrl" class="form-label">Image Link</label>
          <input type="text" class="form-control" id="imageUrl" name="imageUrl">
        </div>
        <div class="hidden" class="mb-3">
          <label for="expireDate" class="form-label">Expiration date</label>
          <input type="date" class="form-control" id="expireDate"
            name="expireDate">
        </div>
        <div class="hidden" class="mb-3">
          <label for="quantity" class="form-label">Amount</label>
          <input type="number" class="form-control" id="quantity"
            name="quantity">
        </div>
        <div class="hidden">
          <label  for="note" class="form-label">Add some comment</label>
          <input type="text" class="form-control" id="note" name="note">
        </div> 
         <button type="submit" class="btn btn-dark">Add new item</button>
</form>


